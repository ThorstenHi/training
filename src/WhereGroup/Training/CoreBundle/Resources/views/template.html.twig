{% extends 'TrainingCoreBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="header">
        <div class="btn-toolbar pull-right">
            <div class="btn-group pull-right">
                <a class="btn btn-primary" href="{{ path('project_index') }}">{{ 'Projekte'|trans }}</a>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu " role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('project_new') }}">Neues Projekt</a></li>
                </ul>
            </div>
            <div class="btn-group pull-right">
                <a class="btn btn-primary" href="{{ path('ressource_index') }}">{{ 'Ressourcen'|trans }}</a>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu " role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('ressource_new') }}">Neue Ressource</a></li>
                </ul>
            </div>
            </div>
            <h3 class="text-muted">{% block title %}{% endblock %}</h3>
        </div>
        <hr/>
        {% block content %}{% endblock %}
        <hr/>
        <div class="footer">
            <p>&copy; WhereGroup 2014</p>
        </div>
    </div>
{% endblock %}