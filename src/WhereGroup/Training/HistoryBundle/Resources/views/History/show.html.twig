{% extends 'TrainingCoreBundle::template.html.twig' %}

{% block title %}{{ 'Projekt History'|trans }}{% endblock %}

{% block content %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Projektleiter</th>
            <th>Beschreibung</th>
            <th>Zeitstempel</th>
        </tr>
        </thead>
        <tbody>
        {% for project in rows %}
            <tr>
                <td>{{ project.name }}</td>
                <td>{{ project.leader }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.datetimez|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('project_index') }}" class="btn btn-primary">{{ 'zur√ºck'|trans }}</a>
{% endblock %}
